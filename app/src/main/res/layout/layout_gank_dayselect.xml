<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gank_dayselect_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="SharedView"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/gank_dayselect_layout_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="SharedShadow"
            android:alpha="0.5"
            android:background="#000000"
             />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/gank_dayselect_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:visibility="invisible"
        android:background="@color/shadow_background_alpha_50">

        <TextView
            android:id="@+id/gank_dayselect_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


    </FrameLayout>


</RelativeLayout>